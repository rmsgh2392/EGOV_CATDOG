<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.mypet.web.usr.UserMapper">
 

    <select id="selectUserById" resultType="User">
       SELECT * FROM CUSTOMER
			WHERE CID LIKE #{uid}
    </select>
    <insert id="insertUser" parameterType="User">
        INSERT INTO CUSTOMER (CID,PWD,SSN,CREDITCARD,PNAME,PHONE,ADDRESS,EMAIL) values (
            #{uid}, #{pwd},#{ssn},#{uname},#{phone},#{address},#{email})
    </insert>
    <select id="existId"  resultType="int">
    	SELECT COUNT(*) CT FROM CUSTOMER WHERE CID LIKE #{uid}
    </select>
</mapper>